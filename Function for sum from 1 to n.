import java.util.*;

public class Main
{
	public static void printSum(int n){
	    
	 int sum=0;
	 for(int i=1; i<=n; i++){
	     if(i%2!=0){
	         sum= sum+i;
	     }
	 }
	 System.out.println("Total sum is : " +sum);
	}
	
	public static void main(String[] args){
	    
	    System.out.println("Enter a number : ");
	    Scanner sc= new Scanner(System.in);
	    int n = sc.nextInt();
	    
	    printSum(n);
	}
}
